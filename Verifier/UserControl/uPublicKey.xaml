<template:DetailsPage x:Class="Verifier.UserControl.uPublicKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Verifier.UserControl"
             xmlns:template="clr-namespace:Verifier.Template"
             mc:Ignorable="d">
    <Button DockPanel.Dock="Bottom" Background="Transparent" BorderBrush="Transparent" Click="ButtonBase_OnClick" Cursor="Hand">
        <StackPanel Orientation="Vertical">
            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center"> تصویر زیر کلید عمومی شما می باشد</TextBlock>
            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center"> برای دریافت اطلاعات کلید عمومی روی تصویر بارکد کلیک کنید</TextBlock>
            <Image Name="imgBarcode" HorizontalAlignment="Stretch"></Image>
        </StackPanel>
    </Button>
</template:DetailsPage>
